<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        tools:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin"
            android:paddingBottom="@dimen/margin">

            <View
                android:id="@+id/topGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/gameImageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/gameImageView"
                app:layout_constraintVertical_bias="0.2" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/backgroundCard"
                style="@style/Playables.View.Card"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/topGuideline"
                app:layout_constraintWidth_percent="0.9" />

            <ImageView
                android:id="@+id/gameImageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_rounded_image"
                android:elevation="@dimen/card_elevation_lifted"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="@id/backgroundCard"
                app:layout_constraintStart_toStartOf="@id/backgroundCard"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.75"
                tools:background="@color/grey_500" />

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/loadingProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/card_elevation_lifted"
                app:layout_constraintBottom_toBottomOf="@id/gameImageView"
                app:layout_constraintEnd_toEndOf="@id/gameImageView"
                app:layout_constraintStart_toStartOf="@id/gameImageView"
                app:layout_constraintTop_toTopOf="@id/gameImageView" />

            <TextView
                android:id="@+id/nameTextView"
                style="@style/Playables.Text.Headline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:elevation="@dimen/card_elevation_lifted"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="@id/backgroundCard"
                app:layout_constraintStart_toStartOf="@id/backgroundCard"
                app:layout_constraintTop_toBottomOf="@id/gameImageView"
                tools:text="Game" />

            <include
                android:id="@+id/platforms"
                layout="@layout/layout_platforms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginTop="@dimen/margin_half"
                android:layout_marginEnd="@dimen/margin"
                android:elevation="@dimen/card_elevation_lifted"
                app:layout_constraintEnd_toEndOf="@id/backgroundCard"
                app:layout_constraintStart_toStartOf="@id/backgroundCard"
                app:layout_constraintTop_toBottomOf="@id/nameTextView" />

            <TextView
                android:id="@+id/descriptionTextView"
                style="@style/Playables.Text.Body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginTop="@dimen/margin_half"
                android:layout_marginEnd="@dimen/margin"
                android:elevation="@dimen/card_elevation_lifted"
                app:layout_constraintEnd_toEndOf="@id/backgroundCard"
                app:layout_constraintStart_toStartOf="@id/backgroundCard"
                app:layout_constraintTop_toBottomOf="@id/platforms"
                tools:text="@tools:sample/lorem/random" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/websiteButton"
                style="@style/Playables.View.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginEnd="@dimen/margin"
                android:elevation="@dimen/card_elevation_lifted"
                android:text="@string/detail_button_open_website"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/bottomGuideline"
                app:layout_constraintEnd_toEndOf="@id/backgroundCard"
                app:layout_constraintStart_toStartOf="@id/backgroundCard"
                app:layout_constraintTop_toBottomOf="@id/descriptionTextView" />

            <View
                android:id="@+id/bottomGuideline"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/backgroundCard"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>