<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/white_opacity_20</item>

        <item name="android:windowBackground">@drawable/bg_window</item>

        <item name="android:statusBarColor">@color/black_opacity_75</item>
        <item name="android:navigationBarColor">@color/transparent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="AppTheme.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <!-- Text -->
    <style name="Playables" />

    <style name="Playables.Text" />

    <style name="Playables.Text.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/textLightPrimary</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Playables.Text.Headline.Unselected">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textLightDisabled</item>
    </style>

    <style name="Playables.Text.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/textLightPrimary</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Playables.Text.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/textLightPrimary</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="Playables.View.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/size_corners_outer</item>
        <item name="cardBackgroundColor">@color/colorPrimaryLight</item>
    </style>

    <style name="Playables.View.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/textLightPrimary</item>
        <item name="android:textColorHint">@color/textLightHint</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Playables.View.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/textLightPrimary</item>
        <item name="android:textColor">@color/textLightPrimary</item>
        <item name="cornerRadius">@dimen/size_corners_inner</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Platform -->
    <style name="Platform">
        <item name="android:tint">@color/white</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="Platform.Small">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
    </style>

    <!-- BottomSheetDialogFragment -->
    <style name="Playables.BottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/colorPrimaryLight</item>
        <item name="android:statusBarColor">@color/black_opacity_75</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>
</resources>
